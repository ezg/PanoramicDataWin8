<Application
    x:Class="PanoramicDataWin8.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:style="using:PanoramicDataWin8.view.style"
    xmlns:local="using:PanoramicDataWin8">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="view/style/CoreStyle.xaml"/>
                <style:ScrollViewStyle/>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Default">
                            <FontFamily x:Key="ContentControlThemeFontFamily">Assets/font/Abel-Regular.ttf#Abel</FontFamily>
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="HighContrast">
                            <FontFamily x:Key="ContentControlThemeFontFamily">Assets/font/Abel-Regular.ttf#Abel</FontFamily>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
