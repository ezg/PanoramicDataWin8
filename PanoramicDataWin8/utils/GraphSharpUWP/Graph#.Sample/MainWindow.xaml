                    </StackPanel>
                </StackPanel>

            </Grid>

            <ViewModel:GraphLayoutView x:Name="graphLayout"
										Graph="{Binding Graph}"
										LayoutAlgorithmType="{Binding LayoutAlgorithmType}"
										OverlapRemovalAlgorithmType="FSA"
