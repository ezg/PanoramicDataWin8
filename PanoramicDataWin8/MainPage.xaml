<Page
    x:Class="PanoramicDataWin8.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PanoramicDataWin8"
    xmlns:common="using:PanoramicDataWin8.view.common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:inq="using:PanoramicDataWin8.view.inq"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Name="Foo">
            <common:AttributeView DataContext="{Binding}" />
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{StaticResource backgroundBrush}"  Name="mainGrid">
        
        <Canvas x:Name="layoutRoot" Width="Auto" Height="Auto" Visibility="Visible">
            <inq:InkableScene 
                        x:Name="inkableScene" 
                        Width="50000" Height="50000" 
                        Background="#00000000">
                <inq:InkableScene.RenderTransform>
                    <MatrixTransform Matrix="1 0 0 1 -25000 -25000"/>
                </inq:InkableScene.RenderTransform>
            </inq:InkableScene>
        </Canvas>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10,0,0,0" >
            <Button Name="addAttributeButton" Click="addAttributeButton_Click" Margin="0,0,0,4">
                <Button.Template>
                    <ControlTemplate>
                        <Grid Width="50" Height="50" Background="{StaticResource lightBrush}">
                            <TextBlock 
                                    CacheMode="BitmapCache"
                                    RenderTransformOrigin="0.5, 0.5"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    TextAlignment="Center"
                                    MaxWidth="50"
                                    Text="a" FontSize="30" Foreground="{StaticResource highlightBrush}" TextWrapping="Wrap" FontWeight="Normal"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Name="addVisualizationButton" Click="addVisualizationButton_Click" Margin="0,0,0,4">
                <Button.Template>
                    <ControlTemplate>
                        <Grid Width="50" Height="50" Background="{StaticResource lightBrush}">
                            <TextBlock 
                                    CacheMode="BitmapCache"
                                    RenderTransformOrigin="0.5, 0.5"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    TextAlignment="Center"
                                    MaxWidth="50"
                                    Text="v" FontSize="30" Foreground="{StaticResource highlightBrush}" TextWrapping="Wrap" FontWeight="Normal"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Name="addJobButton" Click="addJobButton_Click" Visibility="Collapsed">
                <Button.Template>
                    <ControlTemplate>
                        <Grid Width="50" Height="50" Background="{StaticResource lightBrush}">
                            <TextBlock 
                                    CacheMode="BitmapCache"
                                    RenderTransformOrigin="0.5, 0.5"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    TextAlignment="Center"
                                    MaxWidth="50"
                                    Text="j" FontSize="30" Foreground="{StaticResource highlightBrush}" TextWrapping="Wrap" FontWeight="Normal"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <Grid Name="attributeGrid" Width="104" HorizontalAlignment="Left" Margin="64,0,0,0" Visibility="Collapsed" >
            <Canvas Name="attributeCanvas">
            </Canvas>
        </Grid>
        <TextBlock Name="msgTextBlock" Text="" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="{StaticResource darkBrush}" Margin="10" Opacity="0"/>
    </Grid>

    <Page.BottomAppBar >
        <CommandBar Name="commandBar" Style="{StaticResource CommandBarStyle1}">
            <AppBarButton Label="Refresh" Icon="Refresh" Style="{StaticResource AppBarButtonStyle1}"/>
            <AppBarButton Label="Help" Icon="Help"  Style="{StaticResource AppBarButtonStyle1}"/>

            <CommandBar.SecondaryCommands >
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
