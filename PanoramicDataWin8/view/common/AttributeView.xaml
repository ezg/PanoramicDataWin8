<UserControl
    x:Class="PanoramicDataWin8.view.common.AttributeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="clr-namespace:PanoramicData.model.view"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:transform="using:WinRTXamlToolkit.Controls"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="100"
    Width="{Binding Size.X}" Height="{Binding Size.Y}"
    FontFamily="{StaticResource abel}">

    <d:DesignProperties.DataContext>
        <model:AttributeViewModel>
            <model:AttributeViewModel.IsNoChrome>False</model:AttributeViewModel.IsNoChrome>
            <model:AttributeViewModel.MainLabel>Cancellation code</model:AttributeViewModel.MainLabel>
            <model:AttributeViewModel.SubLabel>Test dsafdsa</model:AttributeViewModel.SubLabel>
            <model:AttributeViewModel.IsShadow>False</model:AttributeViewModel.IsShadow>
            <model:AttributeViewModel.TextAngle>0</model:AttributeViewModel.TextAngle>
        </model:AttributeViewModel>
    </d:DesignProperties.DataContext>

    <Grid Name="mainGrid" Background="{StaticResource lightBrush}">
        <Border Name="border" BorderBrush="{StaticResource backgroundBrush}" BorderThickness="4">
            <Viewbox Margin="2">

                <transform:LayoutTransformControl x:Name="transformControl">
                    <transform:LayoutTransformControl.Transform>
                        <RotateTransform x:Name="rotateTransform" Angle="{Binding TextAngle}"/>
                    </transform:LayoutTransformControl.Transform>
                    <TextBlock 
                        Name="txtBlock"
                        CacheMode="BitmapCache"
                        RenderTransformOrigin="0.5, 0.5"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        TextAlignment="Center"
                        MaxWidth="{Binding Size.X}"
                        Text="{Binding MainLabel}" FontSize="11" Foreground="{StaticResource highlightBrush}" TextWrapping="Wrap"/>
                </transform:LayoutTransformControl>
            </Viewbox>
        </Border>
    </Grid>
</UserControl>
