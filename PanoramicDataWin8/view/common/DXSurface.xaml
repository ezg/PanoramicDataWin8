<UserControl
    x:Class="PanoramicDataWin8.view.common.DXSurface"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PanoramicDataWin8.view.common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d"
    Unloaded="UserControl_Unloaded"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <canvas:CanvasControl x:Name="canvasControl" ClearColor="{StaticResource lightColor}"
                              Draw="canvasControl_Draw"
                              CreateResources="canvasControl_CreateResources"/>
    </Grid>
</UserControl>
